@model Etrade.Northwind.MvcWebUI.Models.ProductListViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}


<table class="table">
    <tr>
        <td>Ürün adı</td>
        <td>Birim fiyatı</td>
        <td>Stok adedi</td>
        <td></td>
    </tr>
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.UnitPrice</td>
            <td>@product.UnitsInStock</td>
            <td><a class="btn btn-xs btn-outline-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Sepete ekle</a></td>
        </tr>
    }
</table>
<product-list-pager current-category="@Model.CurrentCategory" current-page="@Model.CurrentPage"
                    page-count="@Model.PageCount" page-size="@Model.PageSize">

</product-list-pager>

