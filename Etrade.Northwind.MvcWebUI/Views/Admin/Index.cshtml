@model Etrade.Northwind.MvcWebUI.Models.ProductListViewModel
@{

    Layout = "~/Views/_AdminLayout.cshtml";
}

<h1>Ürünler</h1>
<a class="btn btn-xs btn-success" asp-controller="Admin" asp-action="Add">Ürün ekle</a>
<table class="table">
    <tr>
        <td>Ürün adı</td>
        <td>Birim fiyatı</td>
        <td>Stok adedi</td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var product in Model.Products)
    {
<tr>
    <td>@product.ProductName</td>
    <td>@product.UnitPrice</td>
    <td>@product.UnitsInStock</td>
    <td><a class="btn btn-xs btn-info" asp-controller="Admin" asp-action="Update" asp-route-productId="@product.ProductId">Güncelle</a></td>
    <td><a class="btn btn-xs btn-danger" asp-controller="Admin" asp-action="Delete" asp-route-productId="@product.ProductId">Sil</a></td>
</tr>
    }
</table>

